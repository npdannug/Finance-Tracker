<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Email</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name </th>
      <th scope="col" class="text-center"></th>
    </tr>
  </thead>
  <tbody>
  	<% friends.each do |friend| %>
	    <tr>
	      <td scope="row"><%= friend.email %></th>
	      <td><%= friend.first_name %></td>
	      <td><%= friend.last_name %></td>
	      <td class="text-center">
          <%= link_to "View Profile", user_path(friend), class: "btn btn-info btn-sm" %>
          <% if request.path == my_friends_path %>
           <%= link_to "Unfollow", friendship_path(friend), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-warning" %>
          <% end %>
        </td>
	    </tr>
    <% end %>
  </tbody>
</table>